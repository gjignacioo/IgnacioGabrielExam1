<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name= "clark">
        <item name="android:layout_width">367dp</item>
        <item name="android:layout_height">165dp</item>
        <item name="android:layout_marginTop">72dp</item>
        <item name="android:text">Clark Kent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold|italic</item>

    </style>
    <style name= "reporter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">300dp</item>
        <item name="android:text">Reporter</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name= "clark2">
        <item name="android:layout_width">361dp</item>
        <item name="android:layout_height">81dp</item>
        <item name="android:text">Very quiet bespectacled reporter at the Daily Planet. Clumsy fellow, but well built and looks strikingly familiar.</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name= "clark3">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">83dp</item>
    </style>
    <style name= "wayne">
        <item name="android:layout_width">363dp</item>
        <item name="android:layout_height">141dp</item>
        <item name="android:text">Bruce Wayne</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold|italic</item>

    </style>
    <style name= "bill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Billionaire</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name= "bill2">
        <item name="android:layout_width">354dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:text">Incredibly smart billionaire industrialist and notorious playboy. Also very reclusive. Almost certainly the Batman.</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name= "bill3">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">79dp</item>
    </style>
    <style name= "bo">
